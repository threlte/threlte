    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "read-pkg-up": "^9.1.0",
    "rimraf": "^5.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
