{
  "name": "@threlte/core",
  "version": "8.1.5",
  "author": "Grischa Erbe <hello@legrisch.com> (https://legrisch.com)",
  "license": "MIT",
  "description": "A 3D framework for the web, built on top of Svelte and Three.js",
  "scripts": {
    "dev": "vite dev",
    "package": "svelte-kit sync && svelte-package && node ./scripts/cleanupPackage.js && publint",
    "prepare": "svelte-kit sync",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "cleanup": "rimraf node_modules .svelte-kit dist"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@sveltejs/adapter-auto": "catalog:",
    "@sveltejs/kit": "catalog:",
    "@sveltejs/package": "catalog:",
    "@sveltejs/vite-plugin-svelte": "catalog:",
    "@threlte/test": "^1.0.0",
    "@types/bun": "^1.2.12",
    "@types/node": "catalog:",
    "@types/three": "catalog:",
    "@yushijinhun/three-minifier-rollup": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-svelte": "catalog:",
    "globals": "catalog:",
    "happy-dom": "^18.0.1",
    "prettier": "catalog:",
    "prettier-plugin-svelte": "catalog:",
    "publint": "catalog:",
    "rimraf": "catalog:",
    "svelte": "catalog:",
    "svelte-check": "catalog:",
    "svelte2tsx": "catalog:",
    "three": "catalog:",
    "tslib": "catalog:",
    "type-fest": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "mitt": "^3.0.1"
  },
  "peerDependencies": {
    "svelte": ">=5",
    "three": ">=0.160"
  },
  "type": "module",
  "keywords": [
    "svelte",
    "three",
    "three.js",
    "webgl",
    "webgpu",
    "webxr",
    "3d"
  ],
  "homepage": "https://threlte.xyz",
  "repository": {
    "type": "git",
    "url": "https://github.com/threlte/threlte.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/threlte/threlte/issues"
  },
  "exports": {
    ".": {
      "types": "./src/lib/types.d.ts",
      "svelte": "./src/lib/index.ts"
    }
  },
  "types": "./src/lib/types.d.ts",
  "svelte": "./src/lib/index.ts",
  "publishOverrides": {
    "files": [
      "dist"
    ],
    "svelte": "./dist/index.js",
    "exports": {
      ".": {
        "types": "./dist/types.d.ts",
        "svelte": "./dist/index.js"
      }
    },
    "types": "./dist/types.d.ts"
  }
}
