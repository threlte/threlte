---
import { Image } from '@astrojs/image/components'
import AppLayout from './AppLayout.astro'
import LogoWithText from '$assets/logo/threlte-logo.png'
import LogoOnly from '$assets/logo/threlte-logo-only.png'
import Socials from '$components/Socials/Socials.astro'
import MobileMainNav from '$components/Menu/MobileMainNav.svelte'
import Footer from '$components/Footer/Footer.astro'

export interface Props {
  title?: string
}

const title = Astro.props.title
---

<AppLayout title={title}>
  <!-- Desktop Nav -->
  <header
    class="mx-auto hidden h-[80px] max-w-7xl flex-row items-center justify-between px-6 md:flex"
  >
    <!-- Header Left -->
    <div class="flex flex-row items-end gap-12">
      <a href="/">
        <Image
          src={LogoWithText}
          alt="threlte logo"
          width={500}
          class="h-[37px] w-auto"
        />
      </a>

      <nav class="flex flex-row gap-5">
        <a href="/showcase">Showcase</a>
        <a href="/docs/learn/getting-started">Docs</a>
      </nav>
    </div>

    <!-- Header Right -->
    <div class="flex flex-row gap-5">
      <Socials />
    </div>
  </header>

  <!-- Mobile Nav -->
  <MobileMainNav client:load>
    <Image
      slot="logo"
      src={LogoOnly}
      alt="threlte logo"
      width={200}
      class="h-[37px] w-auto"
    />
    <Socials slot="after" />
  </MobileMainNav>

  <main class="mx-auto max-w-7xl px-6 pb-12">
    <slot />
  </main>

  <Footer class="max-w-7xl px-6 mx-auto py-12" />
</AppLayout>
